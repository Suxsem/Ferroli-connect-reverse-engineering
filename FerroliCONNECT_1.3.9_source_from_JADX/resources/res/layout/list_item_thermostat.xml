<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/itemLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rltest" android:layout_width="match_parent" android:layout_height="@dimen/list_item_height" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:id="@+id/ivThermostat" android:layout_width="@dimen/list_item_pic" android:layout_height="@dimen/list_item_pic" android:src="@drawable/thermostat_item"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/llDescribe" android:paddingLeft="@dimen/activity_left3_margin" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/list_item_txt1" android:textColor="@color/ferroli_green" android:ellipsize="end" android:id="@+id/textViewDeviceName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/list_roomname_width" android:text="" android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp">
                            <TextView android:textSize="@dimen/list_item_txt3" android:textColor="#585858" android:id="@+id/textViewID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID:"/>
                            <TextView android:textSize="@dimen/list_item_txt3" android:textColor="#585858" android:id="@+id/textViewDeviceId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0590064692"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/imageViewEnterDevice" android:layout_width="match_parent" android:layout_height="@dimen/list_item_next" android:src="@drawable/online" android:layout_weight="6"/>
    </LinearLayout>
</LinearLayout>
